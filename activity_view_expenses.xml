<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextViews to display financial summary -->
    <TextView
        android:id="@+id/totalIncomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Income: Rs 0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/spentAmountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spent Amount: Rs 0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance: Rs 0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- ListView to display expenses -->

    <ListView
        android:id="@+id/listViewExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:longClickable="true"
        android:choiceMode="multipleChoice"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteSelected"
        android:text="@string/delete_selected"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        tools:ignore="OnClick" />
</LinearLayout>
